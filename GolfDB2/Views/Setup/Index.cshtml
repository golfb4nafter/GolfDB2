{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Setup</h4>
        <hr />

@*Course Name*@
<div class="form-group">
    @Html.Label("Default Course", new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.CourseId,
                                      GolfDB2.Models.MiscLists.GetCourseNamesSelectList())
